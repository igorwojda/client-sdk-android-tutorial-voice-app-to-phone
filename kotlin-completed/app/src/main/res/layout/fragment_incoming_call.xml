<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="48dp">


    <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="50dp"
            android:textSize="40sp"
            tools:text="Bob" />

    <TextView
            android:id="@+id/incomingCallTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userNameTextView"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            tools:text="@string/incoming_call_from"
            android:textSize="26sp" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/answerFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:onClick="onAnswer"
            android:src="@drawable/ic_phone"
            app:backgroundTint="@color/positiveCallAction"
            app:fabSize="normal" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/hangupFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="end"
            android:onClick="onHangup"
            android:src="@drawable/ic_phone"
            app:backgroundTint="@color/negativeCallAction"
            app:fabSize="normal" />

</RelativeLayout>